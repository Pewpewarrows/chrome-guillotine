{
    "name": "Guillotine",
    "version": "0.1",

    "description": "Because diff'ing text should be easier than learning how to spell the word guillotine!",
    "default_locale": "en",

    "browser_action": {
        "default_icon": "static/images/icon.png",
        "default_title": "Chrome Guillotine"
    },
    "background_page": "pages/background.html",
    "content_scripts": {
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "js": [
            "static/js/lib/jquery-1.4.4.js",
            "static/js/content_script.js"
        ],
        "run-at": "document_start",
        "all_frames": true
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "http://*/*",
        "https://*/*"
    ]
}
